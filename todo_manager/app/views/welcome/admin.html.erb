<!-- Admin Page allows the admin to view and delete users -->
<div class="container-fluid" style="margin-top: 30px;">
	<h1 align="center"> Admin Page </h1>
</div>
<table class="table table-info">
	<tr>
		<th>User Email:</th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= user.email %>
			</td>
			<td>
			<%= link_to 'delete user', delete_user_path(user),
	               method: :delete,
				   data: { confirm: 'Are you sure you want to delete this user?' }%>
			</td>
		</tr>
	<% end %>
</table>