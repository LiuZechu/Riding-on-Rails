<h1> My <em>Completed</em> Tasks: </h1>

<table class="table table-success">
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th>Tag</th>
      <th>Priority Level</th>
      <th colspan="2"></th>
    </tr>

    <% @user.tasks.where(is_completed: true).each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.due_date %></td>
        <td><%= task.tag %></td>
        <td><%= task.priority_level %></td>
        <td><%= link_to 'Undo', undo_task_path(task.user, task), method: :put %></td>
        <td><%= link_to 'Delete', [task.user, task],
                     method: :delete,
                     data: { confirm: 'Are you sure you want to delete this task?' } %></td>
      </tr>
    <% end %>
  </table>
<hr>

<%= link_to 'Back', user_tasks_path%> <br>
