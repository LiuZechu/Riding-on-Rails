<h1> My <em>Completed</em> Tasks: </h1>

<% @user.tasks.where(is_completed: true).each do |task|%>
  <p>
    <strong>Content:</strong>
    <%= task.content %>
  </p>
 
  <p>
    <strong>Due Date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= task.tag %>
  </p>

  <p>
    <strong>Priority Level:</strong>
    <%= task.priority_level %>
  </p>

  <p>
    <strong>Completed?</strong>
    <%= task.is_completed %>
  </p>
  


  <%= link_to 'Undo', undo_task_path(task.user, task), method: :put %>


  <%= link_to 'Delete', [task.user, task],
               method: :delete,
               data: { confirm: 'Are you sure you want to delete this task?' } %>
<% end %>
<br>
<hr>
<%= link_to 'Back', user_tasks_path%> <br>
